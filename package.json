{
    "name": "ethereum-sepolia-faucet",
    "version": "1.0.0",
    "description": "A faucet for dispensing free Sepolia testnet ETH",
    "main": "server.js",
    "scripts": {
      "start": "node server.js",
      "dev": "npm run build:frontend && nodemon server.js",
      "build": "npm run build:frontend",
      "build:frontend": "cd frontend && npm run build && cp -r build ../",
      "install:all": "npm install && cd frontend && npm install",
      "dev:backend": "nodemon server.js",
      "dev:frontend": "cd frontend && npm start",
      "serve": "npm run build:frontend && node server.js"
    },
    "keywords": [
      "ethereum",
      "faucet",
      "sepolia",
      "testnet",
      "web3",
      "blockchain"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
      "express": "^4.18.2",
      "ethers": "^6.8.1",
      "express-rate-limit": "^7.1.5",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1"
    },
    "devDependencies": {
      "nodemon": "^3.0.2"
    },
    "engines": {
      "node": ">=18.0.0"
    }
  }